    "@mui/icons-material": "^5.10.16",
    "@mui/lab": "^5.0.0-alpha.110",
    "@mui/material": "^5.10.16",
    "@reduxjs/toolkit": "^1.7.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.20.42",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^16.9.14",
    "@types/react-redux": "^7.1.22",
    "axios": "^0.25.0",
    "leaflet": "^1.9.3",
    "react": "^17.0.2",
    "react-cookie": "^4.1.1",
    "react-device-detect": "^2.1.2",
    "react-dom": "^17.0.2",
    "react-ga4": "^1.4.1",
    "react-helmet-async": "^1.3.0",
    "react-image": "^4.0.3",
    "react-image-crop": "^10.0.9",
    "react-leaflet": "^3.2.5",
    "react-leaflet-cluster": "^2.0.0",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.3.0",
    "react-scripts": "^5.0.1",
    "react-share": "^4.4.1",
    "typescript": "~4.1.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:mock": "REACT_APP_MOCK=normal react-scripts start",
    "start:mock:error": "REACT_APP_MOCK=error react-scripts start",
    "start:mock:delay": "REACT_APP_MOCK=normal REACT_APP_MOCK_DELAY_TIME=2000 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll",
    "test:cover": "react-scripts test --coverage --watchAll",
    "eject": "react-scripts eject",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.11",
    "@types/leaflet": "^1.9.0",
    "@types/leaflet.markercluster": "^1.5.1",
    "@types/react-image-crop": "^8.1.3",
    "@types/react-leaflet": "^2.8.2",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/index.tsx",
      "!src/react-app-env.d.ts",
      "!src/serviceWorker.ts",
      "!src/helper-components/*/index.{ts,tsx}",
      "!src/views/pages/*/index.{ts,tsx}",
      "!src/views/components/organisms/*/index.{ts,tsx}",
      "!src/store/index.ts",
      "!src/views/components/moleculars/map-marker/helpers/custom-marker.tsx"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "lint-staged": {
    "*.{ts,js,tsx}": [
      "eslint --fix --max-warnings=0"
    ]
  }
}
